<Window x:Class="TimeTray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeTray" Height="220" Width="360"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Zeiten pro Kalenderwoche" FontSize="16" FontWeight="SemiBold"/>

        <DataGrid x:Name="WeeksGrid" Grid.Row="2"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              HeadersVisibility="Column"
              Margin="0,0,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="KW" Binding="{Binding Kw}" Width="70"/>
                <DataGridTextColumn Header="Jahr" Binding="{Binding Year}" Width="80"/>
                <DataGridTextColumn Header="Zeit" Binding="{Binding DurationText}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="StartBtn" Content="Start" Width="90" Margin="0,0,8,0" Click="Start_Click"/>
            <Button x:Name="StopBtn" Content="Stop" Width="90" Click="Stop_Click"/>
        </StackPanel>
    </Grid>


</Window>
